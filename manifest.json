{
    "manifest_version": 2,
    "name": "Tweet Reply Extension",
    "version": "1.0",
    "description": "Adds a button to every Tweet reply field.",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["*://twitter.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  