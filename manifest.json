{
    "manifest_version": 3,
    "name": "TweetInsight: Twitter Reply Assistant",
    "version": "1.0",
    "description": "Enhance your Twitter reply experience with original tweet insight.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    
    "content_scripts": [
      {
        "matches": [
            "https://twitter.com/*",
            "*://twitter.com/*",
            "https://x.com/*"
          ],
          "css": [
            "style.css"
          ],
        "js": ["Scripts/content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "icons/ready.svg",
          "icons/error.svg"
        ],
        "matches": [
          "https://twitter.com/*"
        ]
      }
    ]
  }
  